<div class="container">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6 sign-in">
      <h2 class="text-center">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form') do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <label for="remember_me">
            <input type="hidden" name="user[remember_me] value="0" ">
            <input class="checkbox" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me"> Remember Me
            </label>
          </div>
        <% end -%>

        <div class="text-center">
          <%= f.submit "Log In", class: 'btn btn-primary', id: 'sign-in-button' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

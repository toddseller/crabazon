<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="text-center">Welcome to our store!</h1>
      <%= link_to new_product_path, class: 'btn btn-success btn-lg' do %>
        <i class="glyphicon glyphicon-plus"> New</i>
      <% end %>
    </div>
    <div class="col-sm-12">
      <% @products.each do |product| %>
        <div class="col-lg-4 pull-left clear-fix index-product">
          <h2 class="text-right">$<%= product.price%></h2> 
          <img class="index-image" src="<%=product.product_image%>" alt="<%= product.name %> Image">
          <h3><%= product.name%></h3>
          <div class="index-description">
            <p><%= product.description%></p> 
            <p>Quantity: <%= product.quantity%></p>
          </div>
          <div> 
            <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary'  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



